/* components/pagemine/pagemine.wxss */
@import '/app.wxss';
.page-mine {
  width: 100%;
  height: 100%;
  background-color: #eee;
}
/* 顶部标题栏 */
.page-mine-topbar {
  width:100%;
  height:140rpx;
  position: fixed;
  top:0;left:0;
  background-color:#fff;
  z-index: 99;
}
.page-mine-topbar .title{
  margin-top:70rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: 900;
  color:#111;
  align-items: flex-start;
}
/* userinfo */
.page-mine .mine{
  width: 100%;
  /* height: 100%; */
  margin-top:140rpx;
}
.page-mine .mine .user{
  padding: 60rpx 20rpx;
  color: #fff;
  background-color: rgb(79, 190, 253);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom:30rpx;
}
.page-mine .mine .user text{
  margin-top: 15rpx;
}
.page-mine .mine .user text text{
  padding: 5rpx 20rpx;
  border-radius: 50rpx;
  color: yellow;
  background-color:  rgb(248, 156, 49);
  font-size: 24rpx;
  margin:0 10rpx;
}
.page-mine .mine .user button{
  position: static;
  width: 150rpx;
  height: 50rpx;
  padding: 10rpx 0;
  border-radius: 50rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: rgb(0, 152, 207);
  margin-top:15rpx;
}
.page-mine .mine .user image{
  margin-top: -35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.page-mine .mine .user .exit{
  position: absolute;
  top: 10rpx;right:10rpx;
  width:150rpx;height:50rpx;
  font-size: 28rpx;
  font-weight: 900;
  color: rgb(0, 152, 207);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.page-mine .mine .order{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  padding:20rpx;
  margin-bottom: 30rpx;
}
.page-mine .mine .order view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page-mine .mine .order view icon{
  font-size: 48rpx;
  font-weight: 900;
  color: rgb(248, 156, 49);
  margin-bottom:10rpx;
}
.page-mine .mine .coupon{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  padding:20rpx;
  margin-bottom: 30rpx;
}
.page-mine .mine .coupon view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page-mine .mine .coupon view text:nth-child(1){
  font-size: 36rpx;
  color: rgb(0, 152, 207);
  margin-bottom:10rpx;
}
.page-mine .mine .coupon view text:nth-child(1) text{
  font-size: 24rpx;
  margin: 0 5rpx;
}
.page-mine .mine .other{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  /* color: #999; */
  color: rgb(243, 59, 45);
  background-color: #fff;
  padding:20rpx;
  margin-bottom: 130rpx;
}