/**index.wxss**/
.no-scroll {
  overflow: hidden;
}
.tab-cont {
  width:100%;
  height:calc(100vh - 110rpx);
}
.tab-cont button{
  position: fixed;
  top:10rpx;right:10rpx;
  width:160rpx;
  height:70rpx;
  font-size:28rpx;
  background-color: #eee;
  z-index: 999;
}
.tab-cont-page {
  width:100%;
  height:100%;
}
/* 底部标签栏 */
.tab-bar {
  display: flex;
  flex-direction: row;
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:110rpx;
  padding:6rpx 0;
  border-top:1rpx solid #eee;
  text-align: center;
  background-color: #fff;
  z-index: 999;
}
.tab-bar view{
  flex:1;
  display: flex;
  flex-direction: column;
  color:#aaa;
  position: relative;
}
.tab-bar view.active{
  color:rgb(0,152,207);
}
.tab-bar icon{
  font-size: 48rpx;
}
.tab-bar text{
  font-size: 24rpx;
  padding-top:4rpx;
}
.tab-bar .cart-count{
  color: #fff;
  background-color: rgb(253, 63, 67);
  font-size: 24rpx;
  position: absolute;
  top:-5rpx;right:30rpx;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  padding: 0;
}